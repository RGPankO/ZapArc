{
  "manifest_version": 3,
  "name": "Lightning Network Tipping Extension",
  "version": "1.0.0",
  "description": "Seamless Bitcoin tipping via Lightning Network on any website with Breez SDK integration",
  
  "permissions": [
    "storage",
    "alarms"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Lightning Tipping"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}